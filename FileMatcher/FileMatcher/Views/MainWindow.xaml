<Window x:Class="FileMatcherApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Duplicate Files Finder" Height="350" Width="451.333"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" AllowDrop="True" 
        PreviewDrop="MainWindow_OnPreviewDrop">
    <Grid AllowDrop="True">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="TxtFileToAdd" HorizontalAlignment="Left" Height="21" Margin="10,286,0,0" TextWrapping="NoWrap" 
                 Text="" VerticalAlignment="Top" Width="168" AllowDrop="True" PreviewDrop="TxtFileToAdd_OnPreviewDrop"
                 TextChanged="TxtFileToAdd_OnTextChanged"/>
        <ListBox Name="LstFolders" HorizontalAlignment="Left" Height="273" Margin="10,8,0,0" VerticalAlignment="Top" 
                 Width="217" AllowDrop="True" PreviewDrop="LstFolders_OnPreviewDrop" 
                 SelectionChanged="LstFolders_OnSelectionChanged">
        </ListBox>
        <Button Name="BtnAddFolder" Content="Add folder" HorizontalAlignment="Left" Margin="238,10,0,0" VerticalAlignment="Top" 
                Width="184" Height="21" Click="BtnAddFolderClick" IsEnabled="False"/>
        <Button Name="BtnRemoveFolder" Content="Remove folder" HorizontalAlignment="Left" Margin="238,36,0,0" VerticalAlignment="Top" 
                Width="184" Height="21" Click="BtnRemoveFolderClick" IsEnabled="False"/>
        <Button Name="BtnRedundant" Content="Search for redudant files" HorizontalAlignment="Left" Margin="238,135,0,0" 
                VerticalAlignment="Top" Width="184" Height="21" Click="BtnRedundantClick" IsEnabled="False"/>
        <Button Name="BtnAdd" Content="..." HorizontalAlignment="Left" Margin="183,286,0,0" VerticalAlignment="Top" Width="44" Height="21" ToolTip="Choose Location" Click="BtnAddLocation"/>
        <Button Name="BtnHelp" Content="Help" HorizontalAlignment="Left" Margin="347,287,0,0" VerticalAlignment="Top" Width="75" Click="BtnHelpClick"/>
    </Grid>
</Window>
